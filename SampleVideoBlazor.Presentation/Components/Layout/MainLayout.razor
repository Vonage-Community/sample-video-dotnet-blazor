@using SampleVideoBlazor.Presentation.Data
@inherits LayoutComponentBase
@inject StateContainer StateContainer

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <text>Session: @StateContainer.GetService().Map(service=> service.Session.SessionId).IfNone("No session registered")</text>
        </div>

        <article class="content px-4">
            @Body
        </article>
        
    </main>
</div>